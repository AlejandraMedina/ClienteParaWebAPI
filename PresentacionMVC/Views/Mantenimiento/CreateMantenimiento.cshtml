@model PresentacionMVC.Models.AltaMantenimientoViewModel

@{
    ViewData["Title"] = "CreateMantenimiento";
}

<h1>Crear Mantenimiento</h1><br>
<div>@ViewBag.Mensaje</div>

<h4>Mantenimiento</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateMantenimiento">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
          
            <div class="form-group">
                <label asp-for="Mantenimiento.Fecha" class="control-label"></label>
                <input asp-for="Mantenimiento.Fecha" class="form-control" />
                <span asp-validation-for="Mantenimiento.Fecha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mantenimiento.Descripcion" class="control-label"></label>
                <input asp-for="Mantenimiento.Descripcion" class="form-control" />
                <span asp-validation-for="Mantenimiento.Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mantenimiento.Costo" class="control-label"></label>
                <input asp-for="Mantenimiento.Costo" class="form-control" />
                <span asp-validation-for="Mantenimiento.Costo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mantenimiento.Funcionario" class="control-label"></label>
                <input asp-for="Mantenimiento.Funcionario" class="form-control" />
                <span asp-validation-for="Mantenimiento.Funcionario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            <div class="form-group invisible">  
                <label asp-for="IdCabañaSeleccionada" class="control-label"></label>
                <input asp-for="IdCabañaSeleccionada" class="form-control" />
                <span asp-validation-for="IdCabañaSeleccionada" class="text-danger"></span>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver</a>
</div>

